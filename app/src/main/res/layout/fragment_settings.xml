<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Notifications Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_notifications"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_notifications"
            android:drawablePadding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_section_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_notifications_enable"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_step_tracking"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchStepTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_workout_reminders"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchWorkoutReminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Features Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_features"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_features"
            android:drawablePadding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_section_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_dark_mode"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_data_sync"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchDataSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_location_services"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchLocationServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_sound_effects"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchSoundEffects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_vibration"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Goals Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_goals"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_goals"
            android:drawablePadding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_section_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvWorkoutGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_workout_goals"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvBreakReminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_break_reminders"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvAchievementAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_achievement_alerts"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Account Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_section_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvAccountSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_account_settings"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_policy"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvTermsOfService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_terms_of_service"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvAboutApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_about_app"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Data Management Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_data_management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_data"
            android:drawablePadding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_section_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvDataExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_export_data"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvDataDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_delete_data"
                android:textSize="16sp"
                android:textColor="@color/text_danger"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvContactSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_contact_support"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvAppVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:gravity="center"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
