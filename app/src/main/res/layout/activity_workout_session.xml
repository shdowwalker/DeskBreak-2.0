<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.workout.WorkoutSessionActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_600"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/workoutSessionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/workout_session_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/background_light"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Stats Cards - Only for Cardio workouts -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSteps"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background_card"
                app:strokeColor="@color/teal_200"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toStartOf="@id/cardDistance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workout_session_steps"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="@color/teal_600"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDistance"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background_card"
                app:strokeColor="@color/purple_200"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardSteps"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workout_session_distance"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0.0m"
                        android:textColor="@color/purple_600"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



            <!-- Meditation Background Card - Only for Mental Recharge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMeditation"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/teal_50"
                app:strokeColor="@color/teal_200"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardSteps">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/meditation_background"
                    android:padding="24dp">

                    <!-- Meditation Icon -->
                    <ImageView
                        android:id="@+id/meditationIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_meditation"
                        android:contentDescription="Meditation"
                        android:alpha="0.9" />

                    <!-- Breathing Guide -->
                    <TextView
                        android:id="@+id/breathingGuide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Breathe in... Breathe out..."
                        android:textColor="@color/teal_700"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <!-- Breathing Animation -->
                    <View
                        android:id="@+id/breathingCircle"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/breathing_circle"
                        android:scaleX="1.0"
                        android:scaleY="1.0" />

                    <!-- Session Progress -->
                    <TextView
                        android:id="@+id/meditationProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Session Progress: 0%"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Google Maps Card - Only for Cardio workouts -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMap"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background_card"
                app:strokeColor="@color/teal_200"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/cardSteps">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="ðŸ“ Workout Location &amp; Path"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Current Exercise Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCurrentExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background_card"
                app:strokeColor="@color/accent_green"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardMap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Exercise Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/exerciseNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exercise 1 of 5"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_background_teal"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/exerciseName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Exercise Name"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Exercise Description -->
                    <TextView
                        android:id="@+id/exerciseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Exercise description will appear here..."
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                    <!-- YouTube Video Tutorial -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/videoTutorialCard"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/background_card">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                                android:id="@+id/youtubePlayerView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/videoTutorialLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Exercise Tutorial Video"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Exercise Timer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Remaining"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/exerciseTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="00:30"
                            android:textColor="@color/accent_green"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <!-- Progress Bar -->
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/exerciseProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:progress="0"
                            app:trackColor="@color/teal_100"
                            app:indicatorColor="@color/accent_green" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Exercise Navigation -->
            <LinearLayout
                android:id="@+id/exerciseNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/cardCurrentExercise">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrevious"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:text="Previous"
                    android:textColor="@color/teal_600"
                    app:strokeColor="@color/teal_600"
                    app:cornerRadius="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:text="Next Exercise"
                    android:backgroundTint="@color/accent_green"
                    android:textColor="@color/white"
                    app:cornerRadius="24dp" />

            </LinearLayout>

            <!-- Exercises List Container -->
            <LinearLayout
                android:id="@+id/exercisesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/exerciseNavigation">

                <TextView
                    android:id="@+id/exercisesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="Full Workout Schedule"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <!-- Items will be added dynamically -->

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_card"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPause"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/workout_session_pause"
            android:textSize="16sp"
            android:backgroundTint="@color/teal_600"
            android:textColor="@color/white"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="@string/workout_session_stop"
            android:textSize="16sp"
            android:textColor="@color/teal_600"
            app:strokeColor="@color/teal_600"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinish"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/workout_session_finish"
            android:textSize="16sp"
            android:backgroundTint="@color/accent_green"
            android:textColor="@color/white"
            app:cornerRadius="28dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
