<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base modern gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#3F51B5"
                android:centerColor="#5C6BC0"
                android:endColor="#7986CB" />
        </shape>
    </item>
    
    <!-- Modern pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.7"
                android:centerY="0.3"
                android:gradientRadius="700dp"
                android:startColor="#00FFFFFF"
                android:centerColor="#12FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Dynamic dashboard lines -->
    <item android:top="100dp">
        <shape android:shape="line">
            <stroke
                android:width="2.5dp"
                android:color="#FFFFFF"
                android:dashWidth="35dp"
                android:dashGap="18dp" />
        </shape>
    </item>
    
    <item android:top="180dp">
        <shape android:shape="line">
            <stroke
                android:width="1.5dp"
                android:color="#E8EAF6"
                android:dashWidth="28dp"
                android:dashGap="14dp" />
        </shape>
    </item>
    
    <item android:top="260dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#C5CAE9"
                android:dashWidth="22dp"
                android:dashGap="11dp" />
        </shape>
    </item>
    
    <!-- Dashboard data points -->
    <item android:top="320dp" android:left="50dp">
        <shape android:shape="oval">
            <size android:width="7dp" android:height="7dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:top="350dp" android:left="90dp">
        <shape android:shape="oval">
            <size android:width="9dp" android:height="9dp" />
            <solid android:color="#E8EAF6" />
        </shape>
    </item>
    
    <item android:top="380dp" android:left="130dp">
        <shape android:shape="oval">
            <size android:width="5dp" android:height="5dp" />
            <solid android:color="#C5CAE9" />
        </shape>
    </item>
    
    <item android:top="410dp" android:left="170dp">
        <shape android:shape="oval">
            <size android:width="8dp" android:height="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Corner modern accent -->
    <item android:top="0dp" android:right="0dp">
        <shape android:shape="oval">
            <size android:width="160dp" android:height="160dp" />
            <gradient
                android:type="radial"
                android:centerX="0.3"
                android:centerY="0.3"
                android:gradientRadius="80dp"
                android:startColor="#00FFFFFF"
                android:centerColor="#18FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Bottom dashboard wave -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <size android:width="0dp" android:height="120dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#25FFFFFF"
                android:endColor="#45FFFFFF" />
        </shape>
    </item>
    
</layer-list>
