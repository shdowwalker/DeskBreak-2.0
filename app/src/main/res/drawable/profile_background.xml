<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base professional gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1565C0"
                android:centerColor="#1976D2"
                android:endColor="#42A5F5" />
        </shape>
    </item>
    
    <!-- Professional pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.8"
                android:centerY="0.2"
                android:gradientRadius="600dp"
                android:startColor="#00FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Geometric accent lines -->
    <item android:top="80dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"
                android:dashWidth="25dp"
                android:dashGap="15dp" />
        </shape>
    </item>
    
    <item android:top="160dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#E3F2FD"
                android:dashWidth="20dp"
                android:dashGap="12dp" />
        </shape>
    </item>
    
    <!-- Professional dots pattern -->
    <item android:top="240dp" android:left="60dp">
        <shape android:shape="oval">
            <size android:width="8dp" android:height="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:top="280dp" android:left="100dp">
        <shape android:shape="oval">
            <size android:width="6dp" android:height="6dp" />
            <solid android:color="#E3F2FD" />
        </shape>
    </item>
    
    <item android:top="320dp" android:left="140dp">
        <shape android:shape="oval">
            <size android:width="10dp" android:height="10dp" />
            <solid android:color="#BBDEFB" />
        </shape>
    </item>
    
    <!-- Corner accent -->
    <item android:top="0dp" android:right="0dp">
        <shape android:shape="oval">
            <size android:width="180dp" android:height="180dp" />
            <gradient
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.2"
                android:gradientRadius="90dp"
                android:startColor="#00FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Bottom professional wave -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <size android:width="0dp" android:height="100dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#40FFFFFF" />
        </shape>
    </item>
    
</layer-list>
