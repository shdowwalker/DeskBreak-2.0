<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Desk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_600</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_600</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_600</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_navigation</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Welcome screen theme -->
    <style name="Theme.Desk.Welcome" parent="Theme.Desk">
        <item name="android:statusBarColor">@color/teal_600</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Auth screens theme -->
    <style name="Theme.Desk.Auth" parent="Theme.Desk">
        <item name="android:statusBarColor">@color/teal_600</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Main activity theme -->
    <style name="Theme.Desk.Main" parent="Theme.Desk">
        <item name="android:statusBarColor">@color/teal_600</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Workout session theme -->
    <style name="Theme.Desk.Workout" parent="Theme.Desk">
        <item name="android:statusBarColor">@color/teal_600</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>